<div class="flex flex-col px-4 py-5 gap-3">
    <div style="background-image: url(<%- artist.picture %>)" class="bg-cover bg-center rounded-full w-44 h-44 hover:scale-110 transition-transform">
        <a href="/v1/artist/<%- artist.id %>" class="h-full w-full bg-black bg-opacity-40 text-center flex flex-col justify-center rounded-full">
            <span><%- artist.name %></span>
        </a>
    </div>
    <div class="flex justify-around items-center gap-3">
        <a target="_blank" href="<%- artist.link %>" title="<%= artist.name %> on Deezer">
            <img src="/v1/img/deezer.min.webp" alt="" class="w-8 h-8">
        </a>
        <div title="# fans" class="flex justify-center gap-1">
            <span class="material-icons">favorite</span>
            <span><%= artist.nFans %></span>
        </div>
        <div title="# albums" class="flex justify-center gap-1">
            <span class="material-icons">album</span>
            <span><%= artist.nAlbums %></span>
        </div>
    </div>
</div>
